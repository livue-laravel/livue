# Exclude from distribution archives (Packagist)
/vendor export-ignore
/node_modules export-ignore
/resources export-ignore

# Build/dev files (npm not published, only Composer)
package.json export-ignore
package-lock.json export-ignore
vite.config.build.js export-ignore
vite.config.esm.js export-ignore

# Git files
.gitattributes export-ignore
.gitignore export-ignore

# Normalize line endings
* text=auto
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.json text eol=lf
*.md text eol=lf
*.blade.php text eol=lf
